    <link href="{{ asset('assets/bootstrap/dist/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/app.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/update.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/bootstrap/dist/css/datetimepicker.css') }}" rel="stylesheet">
    {% block css %}
    {% endblock %}
</head>
<body>
{% include '@incentiveApp/Layout/navigation.html.twig' %}
{% if breadcrumbs is defined %}
    <div class="container content">
        <ol class="breadcrumb">
            {% for breadcrumb in breadcrumbs %}
                {% if breadcrumb.isActive == 1 %}
                    <li class="active">{{ breadcrumb.name }}</li>
                {% else %}
                    <li><a href="{{ path(breadcrumb.path) }}">{{ breadcrumb.name }}</a></li>
                {% endif %}
            {% endfor %}
        </ol>
    </div>
{% endif %}
<div class="container content">
    {% block body %} {% endblock %}
</div>
<footer>
    © 2015 - {{ 'now'|date('Y') }} MobiCom Corporation LLC
</footer>
{% block modal %}
{% endblock %}
<script src="{{ asset("assets/js/app.js") }}"></script>
{#<script src="{{ asset("assets/bootstrap/dist/js/bootstrap.min.js") }}"></script>#}
<script src="{{ asset("assets/bootstrap/js/moment.js") }}"></script>
<script src="{{ asset("assets/bootstrap/js/dateimepicker.js") }}"></script>
<script>
    $(document).ready(function () {
        $('input[datetime=picker]').parent().css('position', 'relative');
        $('input[datetime=picker]').datetimepicker({
            format: 'YYYY-MM-DD HH:mm'
        });
    });
</script>
{% block js %}
{% endblock %}
</body>
</html>