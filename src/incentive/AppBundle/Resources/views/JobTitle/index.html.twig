
{% extends '@incentiveApp/base.html.twig' %}
{% block body %}
    <div class="row">
        {% include '@incentiveApp/inc/flashmsg.html.twig' %}
        <div class="col-xs-12 col-md-6">
            <h2>{{ title }}</h2>
        </div>
        <div class="col-xs-12 col-md-6 text-right">
            <a href="{{ path('job_title_new') }}" class="btn btn-primary btn-rounded">Шинээр нэмэх</a>
        </div>

        <div class="col-xs-12 col-md-12">

            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Нэр</th>
                    <th>Үүсгэсэн огноо</th>
                    <th>Өөрчилсөн огноо</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for entity in data %}
                    <tr id="data{{ entity.id }}" data-id="{{ entity.id }}" class="parent">
                        <td>{{ entity.id }}</td>
                        <td>{{ entity.name }}</td>
                        <td>{{ entity.createdDate|date('Y-m-d H:i:s') }}</td>
                        <td>{% if entity.updatedDate %}{{ entity.updatedDate|date('Y-m-d H:i:s') }}{% else %}-{% endif %}</td>
                        <td>
                            <a href="{{ path('job_title_update', {'id': entity.id}) }}" style="font-size: 16px">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </a>
                            <a href="{{ path('job_title_delete', {'id': entity.id}) }}"
                               onclick="if(!confirm('Итгэлтэй байна уу?'))return false;" style="font-size: 16px">
                                <span class="glyphicon glyphicon-trash"></span>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
{% block js %}
{% endblock %}